<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet Permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Allow cleartext traffic for local development -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Login Activity (Main/Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Area Selection Activity -->
        <activity
            android:name=".AreaSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Ward Selection Activity -->
        <activity
            android:name=".WardSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".AreaSelectionActivity" />

        <!-- Survey Activity -->
        <activity
            android:name=".SurveyActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".WardSelectionActivity" />

        <!-- Success Activity -->
        <activity
            android:name=".SuccessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Notes Activity -->
        <activity
            android:name=".NotesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
